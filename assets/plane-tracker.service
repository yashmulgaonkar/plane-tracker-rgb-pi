[Unit]
Description=plane-tracker
After=network.target

[Service]
Type=simple
ExecStart=/usr/bin/python3 /home/pi/plane-tracker-rgb-pi/its-a-plane-python/its-a-plane.py
WorkingDirectory=/home/pi/plane-tracker-rgb-pi
StandardOutput=append:/home/pi/plane.log
StandardError=append:/home/pi/plane.log
Restart=on-failure
User=pi
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
